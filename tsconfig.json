{
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "target": "es6",
    "types": ["@types/bun"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "declaration": true
  }
}
